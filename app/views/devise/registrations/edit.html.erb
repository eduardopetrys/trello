<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:'form-signin'}, html: {method: 'put'}) do |f| %>
  <%= f.error_notification %>
<h2 class="text-center" >Editar meu perfil</h2>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'E-mail', input_html: {class: 'form-control'} %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Atualmente esperando confirmação para: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :current_password, required: true, label: false, placeholder: 'Sua senha atual', input_html: {class: 'form-control'} %>
    <%= f.input :password, autocomplete: "off", required: false, label: false, placeholder: 'Senha nova', input_html: {class: 'form-control'}  %>
    <%= f.input :password_confirmation, required: false, label: false, placeholder: 'Repita sua nova senha', input_html: {class: 'form-control'}  %>    
    <%= f.button :submit, "Confirmar", class: "btn btn-info btn-block"  %>
<h2 class="text-left" >Deletar minha conta</h2>
<p>Insatisfeito? <%= link_to "Deletar minha conta!", registration_path(resource_name), data: { confirm: "Confirmar?" }, method: :delete %></p>
<%= link_to "Sair", :back %>
<% end %>