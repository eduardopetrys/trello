<p id="notice"><%= notice %></p>

<h1>To Do</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_do.each do |task| %>
      <tr>
      <ul class="list-group">
      <li class="list-group-item list-group-item-success"><%= task.content %></li>
      <li class="list-group-item list-group-item-info"><%= task.state %></li>
    </ul>       
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Deseja deletar a tarefa?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

